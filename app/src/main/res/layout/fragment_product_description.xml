<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".ui.product.ProductDescriptionFragment">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/beverages"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:layout_weight="1">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:id="@+id/upper">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:layout_toStartOf="@id/counter"
                android:id="@+id/layout">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreenDark"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:text="Product Name"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5 Kg"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGreenDark"
                    android:textSize="20sp"
                    android:singleLine="true"
                    android:text="Rs 500.70"/>
            </LinearLayout>
            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:id="@+id/counter"
                android:layout_centerInParent="true"
                android:layout_margin="10dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_cart_mb"
            android:textSize="16sp"
            android:textColor="@color/colorGreenDark"
            android:padding="10dp"
            android:text="Known for its pungent aroma and spicy taste, Onion is widely used in making gravies for vegetables and stews. One of the favourite ingredient in salads, it can be mixed and fried with gram flour to make delectable snacks and Pakodas too."
            android:layout_below="@+id/upper"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:textColor="@color/colorWhite"
            android:id="@+id/add_cart_mb"
            android:text="@string/add_cart"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:cornerRadius="4dp"/>
    </RelativeLayout>

</LinearLayout>